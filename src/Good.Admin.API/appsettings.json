{
  "log": {
    "minlevel": "Trace", //Microsoft.Extensions.Logging.LogLevel
    "console": {
      "enabled": true
    },
    "debug": {
      "enabled": false
    },
    "file": {
      "enabled": true
    },
    "elasticsearch": {
      "enabled": false,
      "nodes": [ "http://localhost:9200" ],
      "indexformat": "Good.Admin.{0:yyyyMMdd}",
      "DefaultIndex": "Good.Admin*"
    },
    "overrides": [
      {
        "source": "Microsoft.AspNetCore",
        "minlevel": "Warning"
      }
    ]
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "SqlAOP": {
      "Enabled": true
    },
    //是否开启生成种子数据
    "SeedDBEnabled": false
  },
  //缓存配置
  "Cache": {
    "CacheType": "Redis", //Redis Memory
    "ConnectionString": "192.168.10.42:6379" //Redis https://github.com/2881099/csredis
  },
  //节点id
  "WorkerId": 1,
  //api地址
  "WebRootUrl": "http://localhost:5005",
  //jwt
  "Jwt": {
    "secret": "96f3a578a1c132ade5c5de5da2694f409580ceeb2b457529a96f82d23a28712e98a946e1c32d53dbd2bf903175eb2d04c503b02b0fc6e6e8d8712f638fb17cd4",
    "accessExpireHours": 24,
    "refreshExpireHours": 24
  },
  "MainDB": "good_admin", //当前项目的主库，所对应的连接字符串的Enabled必须为true
  "MutiDBEnabled": false, //是否开启多库模式
  "CQRSEnabled": false, //是否开启读写分离模式,必须是单库模式，且数据库类型一致，比如都是SqlServer
  "DBS": [
    /*
      对应下边的 DBType
      MySql = 0,
      SqlServer = 1,
      Sqlite = 2,
      Oracle = 3,
      PostgreSQL = 4,
      Dm = 5,//达梦
      Kdbndp = 6,//人大金仓12
    */
    {
      "ConnId": "good_admin",
      "DBType": 0,
      "Enabled": true,
      "HitRate": 50, // 值越大，优先级越高      
      "Connection": "server=192.168.10.42;Database=good.admin;Uid=root;Pwd=;Port=3306;Allow User Variables=True;"
    }
  ],
  "JwtOption": {
    "Secret": "96f3a578a1c132ade5c5de5da2694f409580ceeb2b457529a96f82d23a28712e98a946e1c32d53dbd2bf903175eb2d04c503b02b0fc6e6e8d8712f638fb17cd4",
    "Issuer": "Admin",
    "Audience": "client",
    "Expires": 120,
    "RefreshExpires": 180
  }
}
